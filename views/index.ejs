<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Careersthan</title>

    <!-- CSS -->

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/stylesheets/home.css" />
  </head>
  <body>
    <header>
      <div class="left flex">
        <div class="logo">
          <img src="/icons/logo.svg" alt="" />
          <img src="/icons/logoName.svg" alt="careersthan" />
        </div>

        <!-- Searchbar -->
        <form action="#" class="searchbar">
          <input
            type="text"
            name="search"
            id="searchBar"
            placeholder="Search for Jobs...."
          />
          <button type="submit" class="btn">
            <img src="/icons/searchIcon.svg" alt="" />
          </button>
        </form>
      </div>

      <!-- Navbar -->
      <nav class="navbar">
        <ul class="navlist">
          <li><a href="#">Jobs</a></li>
          <li><a href="#">People</a></li>
          <li class="ainame">
            <a href="#">Firoza AI</a>
            <img class="ailogo" src="/icons/AI logo.svg" alt="" />
          </li>
          <li><a href="#">Get the app</a></li>
          <li><a href="/signin" class="sign-in">Sign in</a></li>
          <li><a href="/signup" class="join-now">Join Now</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <div class="conatiner">
        <div class="illustration">
          <img class="ellipse3" src="/icons/Ellipse 3.svg" alt="" />
          <img class="ellipse2" src="/icons/Ellipse 2.svg" alt="" />
          <img class="ellipse1" src="/icons/Ellipse 1.svg" alt="" />
          <img class="layer2" src="/icons/Layer 2.svg" alt="" />
        </div>

        <div class="signup-form">
          <h1>
            <span style="color: #032901">India’s new </span> home
            <span style="color: #032901">for</span> opportunities.
          </h1>
          <form action="/users/register" method="post">
            <label for="name">Name</label>
            <input
              type="text"
              class="input"
              placeholder="Enter your name..."
              name="username"
            />

            <label for="email">Email</label>
            <input
              type="email"
              class="input"
              placeholder="Enter your email..."
              name="email"
            />

            <label for="password">Password</label>
            <input
              type="password"
              class="input"
              placeholder="Enter your password..."
              name="password"
            />

            <p>
              By clicking Agree and continue, you agree to careersthan’s
              <a href="#">Privacy Policy</a>
            </p>

            <button type="submit">Agree and Continue</button>
          </form>
          <p style="text-align: center; margin-left: 30vh; margin-top: 2vh">
            Or continue with
          </p>
          <div class="social-login">
            <div class="social-icon">
              <a href=""
                ><img src="/icons/Vector@2x.svg" alt="Windows Login"
              /></a>
            </div>
            <div class="social-icon">
              <a href=""><img src="/icons/Vector.svg" alt="Google Login" /></a>
            </div>
            <div class="social-icon">
              <a href=""
                ><img src="/icons/Vector (1).svg" alt="LinkedIn Login"
              /></a>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script src="/javascripts/home.js"></script>
  </body>
</html>
